mainFrame.Position = UDim2.new(0.25, 0, 0.25, 0)
mainFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Black
mainFrame.BorderSizePixel = 5
mainFrame.Parent = screenGui

-- Create a title text label
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.1, 0)
title.BackgroundColor3 = Color3.new(0, 0, 0)
title.TextColor3 = Color3.new(1, 1, 1) -- White
title.Text = "Destroyer Hub (V0.1)"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 18
title.Parent = mainFrame

-- Track whether the main frame is being dragged
local isDragging = false
local dragStartOffset = nil

-- Function to handle mouse button press
local function onMouseDown(mouseX, mouseY)
    isDragging = true
    dragStartOffset = mainFrame.Position - UDim2.new(0, mouseX, 0, mouseY)
end

-- Function to handle mouse movement while dragging
local function onMouseMove(mouseX, mouseY)
    if isDragging then
        mainFrame.Position = UDim2.new(0, mouseX, 0, mouseY) + dragStartOffset
    end
end

-- Function to handle mouse button release
local function onMouseUp()
    isDragging = false
end

-- Connect mouse events for the main frame
mainFrame.InputBegan:Connect(function(input, gameProcessedEvent)
    if not gameProcessedEvent then
        onMouseDown(input.Position.X, input.Position.Y)
    end
end)

mainFrame.InputChanged:Connect(function(input)
    onMouseMove(input.Position.X, input.Position.Y)
end)

mainFrame.InputEnded:Connect(function(input)
    onMouseUp()
end)

